extends: default.liquid
title: epage's blog
---
<div>
  <div>
    {% for post in posts %}
      <div>
        <h2><a href="{{post.path}}">{{ post.title }}</a></h2>
        {% if post.description %}<p>{{ post.description }}</p>{% elsif post.excerpt %}<p>{{ post.excerpt }}</p>{% else %}<br />{% endif %}
        {% if post.tags %}<h4><i class="fa fa-tags"></i> {{ post.tags }}</h4>{% endif %}
        <i class="fa fa-calendar"></i> <time pubdate="pubdate">{{ post.date | date:"%a&nbsp;%d&nbsp;%b&nbsp;'%y" }}</time>
      </div>
    {% endfor %}
  </div>
</div>
